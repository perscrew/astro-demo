---
import VideoGames from './VideoGames.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article>
  <h2>{title}</h2>
  <slot name="before-content" />
  <slot />
  <slot name="after-content" />
  <VideoGames />
</article>


<style>
  article {
    width: 500px;
    border-radius: 15px;
    border: 1px solid grey;
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #efefef;
  }
  h2 {
    color: orange;
  }
  li {
    color: red;
  }
</style>